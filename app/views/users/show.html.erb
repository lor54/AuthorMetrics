

<h1>Profilo Utente</h1>
    <%= image_tag(current_user.avatar_thumbnail) %>
    <ul>
        <li><strong>Email:</strong> <%= current_user.email %></li>
        <li><strong>Nome:</strong> <%= current_user.name %></li>
        <li><strong>Cognome:</strong> <%= current_user.surname %></li>
        <li><strong>Username:</strong> <%= current_user.username %></li>
        <li><strong>Numero autori seguiti:</strong> <%= current_user.follows.count %></li>
    </ul>

<% if current_user.follows.count > 0 %>
<ul>
    <% current_user.follows.each do |follow| %>
        <% author = Author.find_by(id: follow.author_id) %>
        <% id = author.authorid.to_s.insert(-5, '/') %>
        <% name = author.name %>
        <li>
            <%= link_to name, author_path(id) %>
        </li>
    <% end %>
</ul>
<% end %>
