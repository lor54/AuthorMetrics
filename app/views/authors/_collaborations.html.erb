<p>Collaborazioni</p>

<%= column_chart @collaborations['number'] %>

<ul>
    <% @collaborations['data'].each do |year| %>
        <li>
            <%= year[0] %>
            <br>
            <% year[1].each do |element| %>
                <% if element[1].is_a?(Hash) %>
                    <%if element[1].keys.count > 1 %>
                        <% element[1].each do |data| %>
                            <%= data['pid'] %>
                        <% end %>
                    <% else %>
                        <a href="/authors/<%= ERB::Util.url_encode(element[1][element[1].keys[0]]['pid']) %>"><%= element[0] %></a>
                        <%= element[1][element[1].keys[0]]['count'] %>
                    <% end %>
                <% end %>
                <br>
            <% end %>
        </li>
        <br>
    <% end %>
</ul>