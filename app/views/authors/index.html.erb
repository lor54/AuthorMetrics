<h1>Authors</h1>
<%# Search Bar %>
<%= form_tag "/authors", method: "GET" do %>
  <%= label_tag :search_by_name %>
  <%= text_field_tag :search_by_name, params[:search_by_name] %>
  <%= submit_tag "Search" %>
<% end %>

<%# Result List %>
<ul>
  <%= @authors.each do |author| %>
    <li>
      <a href="/authors/<%= getUrlEncodedPid(author['info']['url']) %>"><%= author['info']['author'] %></a>
    </li>
  <% end %>
</ul>

<%# Paginator %>
<% if @pages > 0 %>
  <div class="pagination">
    <a href="#">&laquo;</a>
    <% for i in @beginPages..@maxPages do %>
      <a class="active" href="#"><%= i %></a>
    <% end %>
    <a href="#">&raquo;</a>
  </div>
<% end %>